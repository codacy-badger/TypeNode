{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "types": [
            "reflect-metadata"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es6",
            "dom"
        ],
        "diagnostics": true,
        "listFiles": true,
        "allowUnreachableCode": false,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "test/**/*.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
